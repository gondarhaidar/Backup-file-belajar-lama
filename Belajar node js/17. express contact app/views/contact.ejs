<div class="container mt-2">
    <div class="row">
        <div class="col-md-8 col-sm-1 col-lg-10">
            <h1>DaftarContact</h1>
            <a href="/contact/add" class="btn btn-primary">Tambah Data</a>
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">No</th>
                    <th scope="col">Nama</th>
                    <th scope="col">No HP</th>
                    <th scope="col">Aksi</th>
                  </tr>
                </thead>
                <tbody>
                    <% contacts.forEach((contact, i)=> { %>
                        <tr>
                          <th scope="row"><%= i+1 %></th>
                          <td><%= contact.nama %></td>
                          <td><%= contact.noHp %></td>
                          <td>
                            <a href="/contact/<%=contact.nama%>" class="badge bg-primary text-decoration-none">Detail</a>
                            <a href="/contact/delete/<%= contact.nama %>" class="badge bg-danger text-decoration-none">Hapus</a>
                            <a href="/edit" class="badge bg-success text-decoration-none">Edit</a>
                          </td>
                        </tr>
                     <% }) %>
                </tbody>
              </table>
        </div>
    </div>
</div>